<h1>Your Children</h1>

<% if @children.any? %>
  <ul>
    <% @children.each do |child| %>
      <li>
        <%= child.name %>
        <!-- Link to see child's scores -->
        <%= link_to "View Scores", scores_path(child_id: child.id) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You haven't added any children yet.</p>
<% end %>

<h3>Create a Child Account</h3>
<%= form_with model: @child, url: create_child_path do |f| %>
  <% if @child.errors.any? %>
    <ul>
      <% @child.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :username, "Childâ€™s Username" %><br>
    <%= f.text_field :username %>
  </div>

  <div>
    <%= f.label :email, "Childâ€™s Email" %><br>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit "Create Child" %>
<% end %>

<div class="devise-form">
<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-table"}) do |f| %>
  <div class="form-inputs">
    <%= f.input :role,
            as: :select,
            collection: [["Teacher", "teacher"], ["Family", "family"]],
            prompt: "Select your role",
            required: true %>
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "devise-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

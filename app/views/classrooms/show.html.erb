<h1><%= @classroom.name %></h1>
<% if @students.present? %>
  <h2>Your Students</h2>
  <div class="main-btn-group">
    <% @students.each do |student| %>
        <%= link_to scores_path(id: student.id) do %>
        <button class="main-btn">
            <%= image_tag("https://res.cloudinary.com/dm37aktki/image/upload/v1751905937/lewis-keegan-UQnee_f61_M-unsplash_w51bc1.jpg", class: "main-btn-icon") %>
            <h2><%= student.username %></h2>
            <h4>View Scores</h4>
        </button>
        <% end %>

        <%= button_to classroom_student_path(@classroom, student), method: :delete, data: { confirm: "Are you sure you want to remove #{student.username}?" }, class: "devise-btn" do %>
        Remove
        <% end %>
    <% end %>
    </div>
  <% else %>
    <p>You don’t have any students yet.</p>
  <% end %>

<div class="form-container">
  <div class="devise-form">
    <h3>Add a Student to This Classroom</h3>
    <%= simple_form_for @new_student, url: classroom_students_path(@classroom) do |f| %>
      <div class="form-inputs">
        <%= f.input :username, label: "Child’s Username", required: true %>
      </div>
      <div class="form-inputs">
        <%= f.button :submit, "Add", class: "devise-btn" %>
      </div>
    <% end %>
  </div>

</div>
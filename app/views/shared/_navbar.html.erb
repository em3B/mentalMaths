<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to :root, class: "navbar-brand d-flex align-items-center" do %>
    <div id="logo" class="p-2">
      <%= image_tag("https://res.cloudinary.com/dm37aktki/image/upload/v1744891031/MentalMaths/Untitled_design_1_oh5xiz.png") %>
    </div>
    <div class="px-3">
      <h1 class="mb-0" id="nav-title">MathSprint</h1>
      <p class="mb-0 head-tagline">Add, Subtract, Smile!</p>
    </div>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
    <ul class="navbar-nav nav-item">
      <% if user_signed_in? %>
        <% if current_user.role.downcase == "student" %>
          <li class="active fancy-link m-3">
            <%= link_to "Scores", scores_path %>
          </li>
        <% elsif current_user.role.downcase == "family" %>
          <li class="active fancy-link m-3">
            <%= link_to "My Family", family_dashboard_path %>
          </li>
          <li class="active fancy-link m-3">
            <%= link_to "Profile", profile_path %>
          </li>
        <% elsif current_user.role.downcase == "teacher" %>
          <li class="active fancy-link m-3">
            <%= link_to "My Classrooms", classrooms_path %>
          </li>
          <li class="active fancy-link m-3">
            <%= link_to "Profile", profile_path %>
          </li>
        <% elsif current_user.role.downcase == "admin" %>
          <li class="active fancy-link m-3">
            <%= link_to "Admin Dashboard", admin_dashboard_path %>
          </li>
        <% end %>
        <li class="active fancy-link m-3">
          <%= link_to "Topics", topics_path%>
        </li>
        <% if current_user.role.downcase == "student" %>
          <li class="active fancy-link m-3">
            <%= link_to "Home", :root %>
          </li>
        <% end %>
        <li class="fancy-link m-3">
          <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete } %>
        </li>

      <% else %>
        <li class="active fancy-link m-3">
          <%= link_to "Topics", topics_path%>
        </li>
        <li class="active fancy-link m-3">
          <%= link_to "Login", user_session_path %>
        </li>
        <li class="active fancy-link m-3">
          <%= link_to "SignUp", new_user_registration_path %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
